}

.load-more-btn:hover {
  background: rgba(255, 255, 255, 0.1);
}

/* Mobile responsive */
@media (max-width: 768px) {
  .lightbox-grid {
    grid-template-columns: 1fr;
    grid-template-rows: 1fr auto;
  }
  
  .lightbox-sidebar {
