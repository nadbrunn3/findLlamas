/* ===== MAP & STACK FEED STYLES ===== */

/* MapContainer */
.map-container {
  position: relative;
  height: 600px;
  border-radius: 16px;
  overflow: hidden;
  margin-bottom: 2rem;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  background: #f8f9fa;
}

.leaflet-container {
  border-radius: inherit;
  z-index: 1;
}

.custom-marker {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 3px solid white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  background-size: cover;
  background-position: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.custom-marker:hover {
  transform: scale(1.1);
  z-index: 1000;
}

.custom-marker.active {
  border-color: #007bff;
  transform: scale(1.2);
  box-shadow: 0 4px 16px rgba(0, 123, 255, 0.4);
}

/* Photo polyline */
.photo-path {
  stroke: #007bff;
  stroke-width: 3;
  stroke-opacity: 0.8;
  fill: none;
}

/* Mini Map */
.mini-map-container {
  position: fixed;
  top: 100px;
  right: 20px;
  width: 240px;
  height: 180px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  border: 2px solid rgba(255, 255, 255, 0.9);
  opacity: 0;
  transform: translateY(-20px);
  transition: all 0.4s ease;
  z-index: 500;
  background: white;
}

.mini-map-container.visible {
  opacity: 1;
  transform: translateY(0);
}

.mini-map-container .leaflet-container {
  border-radius: 10px;
}

.mini-map-toggle {
  position: absolute;
  top: 8px;
  right: 8px;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 6px;
  padding: 6px;
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  transition: all 0.3s ease;
}

.mini-map-toggle:hover {
  background: white;
  transform: scale(1.1);
}

/* Stack Feed */
.stack-feed {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  max-width: 600px;
  margin: 0 auto;
  padding: 0 1rem;
}

/* StackCard */
.stack-card {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 2px solid transparent;
  scroll-margin-top: 100px;
}

.stack-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
}

.stack-card.active {
  border-color: #007bff;
  box-shadow: 0 8px 32px rgba(0, 123, 255, 0.2);
}

.stack-card.pulse {
  animation: cardPulse 1s ease-out;
}

@keyframes cardPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.02); }
  100% { transform: scale(1); }
}

/* StackCard Header */
.stack-card-header {
  padding: 1.5rem 1.5rem 1rem;
  border-bottom: 1px solid #f0f0f0;
}

.stack-card-title {
  font-size: 1.25rem;
  font-weight: 700;
  color: #2c3e50;
  margin: 0 0 0.5rem 0;
  line-height: 1.3;
}

.stack-card-location {
  font-size: 0.9rem;
  color: #7f8c8d;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.stack-card-location::before {
  content: "üìç";
  font-size: 0.8rem;
}

/* Photo Area */
.photo-area {
  position: relative;
  height: 400px;
  overflow: hidden;
  background: #f8f9fa;
}

.main-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  cursor: pointer;
}

.main-photo:hover {
  transform: scale(1.02);
}

/* Navigation Controls */
.nav-controls {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.6);
  border: none;
  color: white;
  padding: 12px;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
  opacity: 0;
  z-index: 2;
}

.photo-area:hover .nav-controls {
  opacity: 1;
}

.nav-controls:hover {
  background: rgba(0, 0, 0, 0.8);
  transform: translateY(-50%) scale(1.1);
}

.nav-prev {
  left: 12px;
}

.nav-next {
  right: 12px;
}

.nav-controls:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.nav-controls:disabled:hover {
  transform: translateY(-50%) scale(1);
}

/* Thumbnail Drawer */
.thumbnail-drawer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20px 16px 16px;
  transform: translateY(100%);
  transition: all 0.3s ease;
  z-index: 3;
}

.photo-area:hover .thumbnail-drawer,
.thumbnail-drawer.expanded {
  transform: translateY(0);
}

.thumbnail-container {
  display: flex;
  gap: 8px;
  overflow-x: auto;
  padding: 4px;
}

.thumbnail {
  flex-shrink: 0;
  width: 60px;
  height: 40px;
  border-radius: 6px;
  overflow: hidden;
  cursor: pointer;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  opacity: 0.7;
}

.thumbnail:hover {
  opacity: 1;
  transform: scale(1.1);
}

.thumbnail.active {
  border-color: white;
  opacity: 1;
  transform: scale(1.05);
}

.thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Photo Counter */
.photo-counter {
  position: absolute;
  top: 16px;
  right: 16px;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 500;
  z-index: 3;
}

/* Action Row */
.action-row {
  padding: 1rem 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f0f0f0;
}

.action-left {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.action-btn {
  background: none;
  border: 1px solid #e9ecef;
  color: #6c757d;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
}

.action-btn:hover {
  background: #f8f9fa;
  border-color: #007bff;
  color: #007bff;
}

.action-btn.liked {
  background: #fff5f5;
  border-color: #ff6b6b;
  color: #ff6b6b;
}

.action-btn.commented {
  background: #f0f8ff;
  border-color: #007bff;
  color: #007bff;
}

.like-count,
.comment-count {
  font-weight: 600;
}

/* Stack Stats */
.stack-stats {
  font-size: 0.85rem;
  color: #6c757d;
}

/* Scroll indicators and performance hints */
.virtualization-spacer {
  flex-shrink: 0;
  pointer-events: none;
  background: transparent;
}

/* Performance optimizations */
.photo-area,
.main-photo,
.thumbnail img,
.lightbox-content,
.mini-map-container {
  transform: translateZ(0);
  will-change: transform;
}

/* Focus styles for accessibility */
.stack-card:focus-within {
  outline: 2px solid #007bff;
  outline-offset: 2px;
}

.action-btn:focus,
.nav-controls:focus,
.thumbnail:focus {
  outline: 2px solid #007bff;
  outline-offset: 2px;
}

/* Print styles */
@media print {
  .mini-map-container,
  .nav-controls,
  .action-row {
    display: none;
  }
  
  .stack-card {
    break-inside: avoid;
    box-shadow: none;
    border: 1px solid #ddd;
  }
}

/* Reduced motion preferences */
@media (prefers-reduced-motion: reduce) {
  .stack-card,
  .nav-controls,
  .thumbnail,
  .action-btn,
  .mini-map-container {
    transition: none;
  }
  
  .stack-card.pulse {
    animation: none;
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .stack-card {
    border: 2px solid #000;
  }
  
  .action-btn {
    border: 2px solid currentColor;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .stack-card {
    background: #2d3748;
    color: white;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
  .stack-card-header {
    border-bottom-color: #4a5568;
  }
  
  .stack-card-title {
    color: white;
  }
  
  .stack-card-location {
    color: #a0aec0;
  }
  
  .action-row {
    border-top-color: #4a5568;
  }
  
  .action-btn {
    border-color: #4a5568;
    color: #a0aec0;
  }
  
  .action-btn:hover {
    background: #4a5568;
    color: white;
  }
  
  .photo-area {
    background: #4a5568;
  }
}

/* Mobile responsive design */
@media (max-width: 768px) {
  .stack-feed {
    padding: 0 0.5rem;
    gap: 1.5rem;
  }
  
  .stack-card {
    border-radius: 12px;
  }
  
  .stack-card-header {
    padding: 1rem 1rem 0.75rem;
  }
  
  .stack-card-title {
    font-size: 1.1rem;
  }
  
  .photo-area {
    height: 300px;
  }
  
  .action-row {
    padding: 0.75rem 1rem;
  }
  
  .action-btn {
    padding: 0.4rem 0.8rem;
    font-size: 0.85rem;
  }
  
  .mini-map-container {
    width: 180px;
    height: 135px;
    top: 80px;
    right: 10px;
  }
  
  .thumbnail {
    width: 50px;
    height: 35px;
  }
  
  .nav-controls {
    padding: 10px;
  }
}

/* Very small mobile devices */
@media (max-width: 480px) {
  .stack-feed {
    padding: 0 0.25rem;
  }
  
  .stack-card-header {
    padding: 0.75rem 0.75rem 0.5rem;
  }
  
  .photo-area {
    height: 250px;
  }
  
  .action-row {
    padding: 0.5rem 0.75rem;
    flex-direction: column;
    gap: 0.5rem;
    align-items: stretch;
  }
  
  .action-left {
    justify-content: center;
  }
  
  .mini-map-container {
    position: relative;
    width: 100%;
    height: 200px;
    top: auto;
    right: auto;
    margin: 1rem 0;
  }
}

/* Tablet landscape */
@media (min-width: 769px) and (max-width: 1024px) {
  .stack-feed {
    max-width: 700px;
  }
  
  .photo-area {
    height: 450px;
  }
}

/* Large desktop */
@media (min-width: 1200px) {
  .stack-feed {
    max-width: 800px;
  }
  
  .photo-area {
    height: 500px;
  }
  
  .mini-map-container {
    width: 280px;
    height: 210px;
  }
}

/* Ultra-wide screens */
@media (min-width: 1600px) {
  .stack-feed {
    max-width: 900px;
  }
}

/* Landscape mobile orientation */
@media (max-height: 500px) and (orientation: landscape) {
  .photo-area {
    height: 200px;
  }
  
  .mini-map-container {
    width: 160px;
    height: 120px;
  }
}

/* Container scrolling behavior */
.scroll-container {
  scroll-behavior: smooth;
  overflow-y: auto;
}

/* Fix for iOS Safari bounce scrolling */
body {
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden;
}

/* Selection highlighting */
.stack-card-title::selection,
.stack-card-location::selection {
  background: rgba(0, 123, 255, 0.2);
}

/* Loading states */
.loading .photo-area {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* Error states */
.error .photo-area {
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6c757d;
  font-style: italic;
}

.error .photo-area::before {
  content: "‚ö†Ô∏è Failed to load image";
}

/* Lightbox Basic Styles (Legacy Support) */
.lightbox {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.lightbox:not(.hidden) {
  opacity: 1;
  pointer-events: auto;
}

.lightbox-content {
  position: relative;
  max-width: 95vw;
  max-height: 95vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lightbox-image {
  max-width: 90vw;
  max-height: 90vh;
  object-fit: contain;
}

.lightbox-close {
  position: absolute;
  top: 20px;
  right: 20px;
  background: rgba(0, 0, 0, 0.8);
  border: none;
  color: white;
  padding: 12px;
  border-radius: 50%;
  cursor: pointer;
  z-index: 10000;
}

/* Mobile lightbox adjustments */
@media (max-width: 768px) {
  .lightbox-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 100%;
    max-height: 100%;
    gap: 1rem;
  }
  
  .lightbox-main {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  
  .lightbox-image {
    max-width: 95vw;
    max-height: 70vh;
  }
}

/* Body scroll lock when lightbox is open */
body.lightbox-open {
  overflow: hidden;
}

/* ===== MODERN LIGHTBOX LAYOUT SPEC ===== */

/* Portal: render at body level */
.lightbox-portal {
  position: fixed;
  inset: 0;
  z-index: 9998;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.lightbox-portal:not(.hidden) {
  opacity: 1;
  pointer-events: auto;
}

/* Backdrop */
.lightbox-backdrop {
  position: fixed;
  inset: 0;
  z-index: 9998;
  background: rgba(0, 0, 0, 0.9);
  cursor: pointer;
}

/* Content grid on top of backdrop */
.lightbox-grid {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: grid;
  grid-template-columns: minmax(0, 1fr) 380px;
}

/* Left column (media column) */
.lightbox-media {
  position: relative;
  height: 100%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Center the image/video */
.lightbox-image {
  max-width: 92vw;
  max-height: 90vh;
  object-fit: contain;
  z-index: 1;
}

/* Arrows: absolute left/right center inside .media; z-index: 2 */
.lightbox-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  background: rgba(0, 0, 0, 0.7);
  border: none;
  color: white;
  padding: 16px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.lightbox-arrow:hover {
  background: rgba(0, 0, 0, 0.9);
  transform: translateY(-50%) scale(1.1);
}

.lightbox-prev {
  left: 24px;
}

.lightbox-next {
  right: 24px;
}

/* Thumbnail strip: inside .media */
.lightbox-thumbnails {
  position: absolute;
  bottom: 16px;
  left: 0;
  right: 0;
  display: flex;
  gap: 8px;
  overflow-x: auto;
  z-index: 2;
  padding: 0 24px;
  justify-content: center;
}

.lightbox-thumbnail {
  flex-shrink: 0;
  width: 60px;
  height: 40px;
  border-radius: 4px;
  overflow: hidden;
  cursor: pointer;
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.lightbox-thumbnail:hover {
  border-color: rgba(255, 255, 255, 0.5);
  transform: scale(1.1);
}

.lightbox-thumbnail.active {
  border-color: #8bb8ff;
}

.lightbox-thumbnail img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Bottom gradient behind text */
.lightbox-media::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120px;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.55), transparent);
  z-index: 1;
  pointer-events: none;
}

/* Caption/title overlay */
.lightbox-caption-overlay {
  position: absolute;
  left: 16px;
  bottom: 16px;
  max-width: 60%;
  padding: 8px 12px;
  border-radius: 8px;
  color: #fff;
  z-index: 2;
}

.lightbox-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.lightbox-caption {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4px;
  line-height: 1.3;
}

.lightbox-counter {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
}

/* Right column (sidebar) */
.lightbox-sidebar {
  position: relative;
  height: 100%;
  overflow-y: auto;
  background: rgba(12, 12, 12, 0.85);
  border-left: 1px solid rgba(255, 255, 255, 0.08);
  z-index: 3;
  display: flex;
  flex-direction: column;
}

/* Header row */
.sidebar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px 16px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}

.lightbox-close,
.save-btn {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  padding: 8px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lightbox-close:hover,
.save-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-1px);
}

/* Reactions row */
.reactions-row {
  display: flex;
  gap: 12px;
  padding: 16px 24px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
}

.reaction-btn {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  padding: 10px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

.reaction-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-1px);
}

.reaction-btn.liked {
  background: rgba(255, 59, 92, 0.2);
  border-color: rgba(255, 59, 92, 0.4);
  color: #ff3b5c;
}

/* Comments sections */
.comments-container {
  flex: 1;
  padding: 0 24px 24px;
  overflow-y: auto;
}

.comment-section {
  margin-bottom: 20px;
}

.section-toggle {
  width: 100%;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  color: white;
  padding: 12px 16px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
  margin-bottom: 12px;
}

.section-toggle:hover {
  background: rgba(255, 255, 255, 0.1);
}

.section-toggle h3 {
  margin: 0;
  font-size: 15px;
  font-weight: 600;
}

.toggle-icon {
  transition: transform 0.3s ease;
}

.section-toggle[aria-expanded="false"] .toggle-icon {
  transform: rotate(-90deg);
}

.section-content {
  transition: max-height 0.3s ease, opacity 0.3s ease;
  max-height: 500px;
  opacity: 1;
  overflow: hidden;
}

.section-content.collapsed {
  max-height: 0;
  opacity: 0;
}

/* Comment composer */
.comment-composer {
  margin-bottom: 16px;
  display: flex;
  gap: 8px;
  align-items: flex-end;
}

.comment-textarea {
  flex: 1;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
  padding: 8px 12px;
  border-radius: 6px;
  font-size: 14px;
  resize: vertical;
  min-height: 40px;
  font-family: inherit;
}

.comment-textarea::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.comment-textarea:focus {
  outline: none;
  border-color: rgba(139, 184, 255, 0.5);
  background: rgba(255, 255, 255, 0.15);
}

.comment-post {
  background: rgba(139, 184, 255, 0.2);
  border: 1px solid rgba(139, 184, 255, 0.4);
  color: #8bb8ff;
  padding: 8px 16px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 14px;
  font-weight: 500;
}

.comment-post:hover {
  background: rgba(139, 184, 255, 0.3);
  transform: translateY(-1px);
}

/* Comments list */
.comments-list {
  margin-bottom: 12px;
  max-height: 200px;
  overflow-y: auto;
}

.comment-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 6px;
  padding: 10px 12px;
  margin-bottom: 8px;
  border: 1px solid rgba(255, 255, 255, 0.08);
}

.comment-author {
  font-size: 13px;
  font-weight: 600;
  color: #8bb8ff;
  margin-bottom: 3px;
}

.comment-text {
  font-size: 14px;
  color: white;
  line-height: 1.4;
  margin-bottom: 3px;
}

.comment-time {
  font-size: 11px;
  color: rgba(255, 255, 255, 0.6);
}

.load-more-btn {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
  padding: 6px 12px;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.3s ease;
